                },
                "tokens": {
                  "minimum": 0,
                  "type": "integer"
                },
                "tool_calls": {
                  "minimum": 0,
                  "type": "integer"
                }
              },
              "required": [
                "tool_calls",
                "time_ms"
              ],
              "type": "object"
            }
          },
          "required": [
            "budget_name",
            "limits"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.budget_profile.v1"
        }
      }
    }
  ],
  "title": "CAC BudgetProfile v1"
