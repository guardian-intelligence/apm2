{
  "$id": "cac.context_pack_manifest.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "context_pack.manifest"
        },
        "payload": {
          "additionalProperties": false,
          "properties": {
            "compiler_profile_id": {
              "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
            },
            "compiler_version": {
              "type": "string"
            },
            "derived_artifacts": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "content_hash": {
                    "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
                  },
                  "description": {
                    "type": "string"
                  },
                  "format": {
                    "type": "string"
                  },
                  "kind": {
                    "type": "string"
                  }
                },
                "required": [
                  "kind",
                  "content_hash"
                ],
                "type": "object"
              },
              "type": "array"
            },
            "pack_spec_stable_id": {
              "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
            },
            "receipts": {
              "items": {
                "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
              },
              "type": "array"
            },
            "resolved_at": {
              "$ref": "cac.common.v1.schema.json#/$defs/timestamp"
            },
            "resolved_inputs": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "artifact_kind": {
                    "type": "string"
                  },
                  "content_hash": {
                    "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
                  },
                  "schema_id": {
                    "type": "string"
                  },
                  "stable_id": {
                    "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
                  }
                },
                "required": [
                  "stable_id",
                  "content_hash"
                ],
                "type": "object"
              },
              "minItems": 1,
              "type": "array"
            }
          },
          "required": [
            "pack_spec_stable_id",
            "resolved_at",
            "resolved_inputs"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.context_pack_manifest.v1"
        }
      }
    }
  ],
  "title": "CAC ContextPackManifest v1"
}
