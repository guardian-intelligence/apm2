{
  "$id": "bootstrap:admission_receipt.v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Bootstrap Admission Receipt v1",
  "description": "Receipt generated when an artifact passes the admission pipeline.",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "const": "bootstrap:admission_receipt.v1"
    },
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "kind": {
      "type": "string",
      "const": "receipt.admission"
    },
    "meta": {
      "type": "object",
      "properties": {
        "stable_id": {
          "type": "string",
          "pattern": "^bootstrap:[a-z0-9._-]+$"
        },
        "classification": {
          "type": "string",
          "enum": ["PUBLIC", "INTERNAL", "CONFIDENTIAL", "RESTRICTED"]
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["stable_id", "classification", "created_at"],
      "unevaluatedProperties": false
    },
    "payload": {
      "type": "object",
      "properties": {
        "receipt_id": {
          "type": "string",
          "minLength": 1
        },
        "decision": {
          "type": "string",
          "enum": ["ADMIT", "DENY"]
        },
        "target_stable_id": {
          "type": "string"
        },
        "base_hash": {
          "type": "string",
          "pattern": "^b3-256:[0-9a-f]{64}$"
        },
        "new_hash": {
          "type": "string",
          "pattern": "^b3-256:[0-9a-f]{64}$"
        },
        "patch_record_hash": {
          "type": "string",
          "pattern": "^b3-256:[0-9a-f]{64}$"
        },
        "schema_id": {
          "type": "string"
        },
        "schema_hash": {
          "type": "string",
          "pattern": "^b3-256:[0-9a-f]{64}$"
        },
        "validator_version": {
          "type": "string"
        },
        "canonicalizer_id": {
          "type": "string"
        },
        "canonicalizer_version": {
          "type": "string"
        },
        "canonicalizer_vectors_ref": {
          "type": "string"
        },
        "policy_hash": {
          "type": "string",
          "pattern": "^b3-256:[0-9a-f]{64}$"
        },
        "canonicalization": {
          "type": "string"
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "receipt_id",
        "decision",
        "target_stable_id",
        "base_hash",
        "new_hash",
        "patch_record_hash",
        "schema_id",
        "canonicalizer_id",
        "canonicalizer_version",
        "canonicalizer_vectors_ref"
      ],
      "unevaluatedProperties": false
    }
  },
  "required": ["schema", "schema_version", "kind", "meta", "payload"],
  "unevaluatedProperties": false
}
