{
  "$id": "bootstrap:common.v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Bootstrap Common Types v1",
  "description": "Core type definitions for bootstrap schemas. These types form the foundational trust root.",
  "$defs": {
    "content_hash": {
      "description": "BLAKE3-256 hash reference in canonical textual form.",
      "type": "string",
      "pattern": "^b3-256:[0-9a-f]{64}$"
    },
    "stable_id": {
      "description": "Stable ID in the bootstrap namespace.",
      "type": "string",
      "pattern": "^bootstrap:[a-z0-9._-]+$"
    },
    "id_string": {
      "description": "General identifier string.",
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "pattern": "^[A-Za-z0-9_.:-]+$"
    },
    "classification": {
      "description": "Data classification level.",
      "type": "string",
      "enum": ["PUBLIC", "INTERNAL", "CONFIDENTIAL", "RESTRICTED"]
    },
    "timestamp": {
      "description": "ISO 8601 timestamp.",
      "type": "string",
      "format": "date-time"
    },
    "schema_version": {
      "description": "Schema version identifier.",
      "type": "string",
      "pattern": "^v[0-9]+$"
    }
  },
  "type": "object",
  "unevaluatedProperties": false
}
